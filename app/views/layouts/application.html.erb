<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= render "layouts/stylesheets" %>
  <%= render "layouts/icons" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
<%= render "layouts/header" %>
<div class="container">
  <div class="content">
    <% flash.each do |name, msg| %>
        <div data-alert class="alert fade in alert-<%= name %>">
          <a class="close" data-dismiss="alert">&times;</a>
          <%= msg %>
        </div>
    <% end %>
    <%= yield %>
  </div>
</div>
<%= render "layouts/footer" %>
<%= include_gon %>
<%= render "layouts/scripts" %>
</body>
</html>
