<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= render "layouts/stylesheets" %>
  <%= render "layouts/scripts" %>
  <%= render "layouts/icons" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
<%= render "layouts/ribbon" %>
<%= render "layouts/header" %>
<div class="container">
  <div class="content">
    <% flash.each do |name, msg| %>
        <div data-alert class="alert-message <%= name %>">
          <a class="close" href="#">Ã—</a>
          <p><%= msg %></p>
        </div>
    <% end %>
    <%= yield %>
  </div>
  <%= render "layouts/footer" %>
</div>
</body>
</html>
