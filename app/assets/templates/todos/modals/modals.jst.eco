<div class="modal wide-modal hide fade" id="myModal">
   <a class="close" data-dismiss="modal">Ã—</a>
   <div class="modal-left-side span6">
    <div class="modal-header">

        <h3><%= @todo.get('text')%></h3>
        <h5 class="grey-sub-header"><%= " in " + @list.attributes.text %></h5>
    </div>
    <div class="modal-body">
        <h4>Task Description:</h4>
        <div class="description-content">
            <span class="desc-label"><%= if @todo.get('description') == '' then "Double click to add description" else if @todo.get('description') == null then "Double click to add description" else @todo.get('description') %></span>
            <input type="text" class="description-input todo-input span6" value="<%= @todo.get('description') %>" />
        </div>
    </div>

   </div>

   <div class="modal-right-side span2">
       <h3>Actions</h3>
       <a href="#" class="btn btn-info"><i class="icon-time icon-white"/> Due Date</a>
       <a href="#" class="btn btn-info"><i class="icon-tag icon-white"/> Add Label</a>
       <a href="#" class="btn btn-info"><i class="icon-user icon-white"/> Delegate Task</a>
       <a href="#" class="btn btn-info"><i class="icon-random icon-white"/> Share Task</a>
       <a href="#" class="btn btn-info"><i class="icon-check icon-white"/> Add Checklist</a>
   </div>

</div>