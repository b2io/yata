<div class="todo<%= " done" if @todo.get('done') %>">
  <input type="checkbox" class="todo-check" <%= "checked" if @todo.escape('done') == 'true' %> />
  <div class="todo-content">
    <span class="todo-label"><%= @todo.escape('text') %></span>
    <input type="text" class="todo-input" value="<%= @todo.escape('text') %>" />
  </div>
  <a class="todo-destroy close" title="<%= if @todo.escape('done') == 'true' then "Clear" else "Delete" %>"><%- if @todo.escape('done') == 'true' then "&#x2713;" else "&#x2717;" %></a>
</div>